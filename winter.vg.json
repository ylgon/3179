{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 450,
    "title": "winter olympics metal from 1924 to 2018",
    "params": [
      {
        "name": "Year_selection",
        "value": 2018,
        "bind": {
          "input": "range",
          "min": 1924,
          "max": 2018,
          "step": 1,
          "name": "Year: "
        }
      }
       
    ],
    "projection": {"type": "equirectangular"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ylgon/3179/main/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "white",
          "strokeWidth": 1
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/ylgon/3179/main/events_medals.csv"
        },
        "transform": [
          {
            "lookup": "country",
            "from": {
              "data": {
               "url": "https://raw.githubusercontent.com/ylgon/3179/main/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
              },
              "key": "properties.NAME"
            },
            "as": "geo"
          },
          {"filter": "datum.event_year == Year_selection"}
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "total",
            "type": "quantitative",
            "scale": {"scheme": "reds", "domain": [0, 40]},
            "title": "total metal",
            "legend": {"orient": "right"}
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "State"},
            {
              "field": "total",
              "type": "quantitative",
              "title": "total metal"
            },
            {"field": "event_year", "type": "quantitative"}
          ]
        }
      }
    ],
    "config": {}
  }