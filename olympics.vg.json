{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "beer drink all around the world",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ylgon/3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ylgon/3179/main/Olympics2022.csv"
        },
        "key": "Country",
        "fields": ["TotalMedals"]
      }
    },
    {"calculate": "datum.TotalMedals", "as": "Metals"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Metals",
      "type": "quantitative",
      "scale": {"type": "threshold",
      "domain": [10, 20, 30],
      "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Metals", "type": "quantitative"}
    ]
  }
}

