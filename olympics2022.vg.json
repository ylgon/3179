{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "beijing 2022 winter olympics Athletes and metal",
    "data": {
      "url": "https://raw.githubusercontent.com/ylgon/3179/main/Olympics2022.csv"
    },
    "params": [
      
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
   
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      }
      
    ],
    "encoding": {
      "x": {
        "field": "MenAthletes",
        "type": "quantitative",
        "title": "MenAthletes"
        
      },
      "y": {
        "field": "WomenAthletes",
        "type": "quantitative"
        
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "TotalMedals",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [10, 30, 50, 70, 100],
              "range": [50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Confirmed", "type": "quantitative", "format": ","},
            {"field": "MenAthletes", "type": "quantitative", "format": ","},
            {"field": "WomenAthletes", "type": "quantitative", "format": ","},
            {"field": "Gold", "type": "quantitative", "format": ","},
            {"field": "Silver", "type": "quantitative", "format": ","},
            {"field": "Bronze", "type": "quantitative", "format": ","},
            {
              "field": "TotalMedals",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Norway' || datum['Country'] == 'Russian' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
             {"field": "Country", "type": "nominal"},
            {"field": "Confirmed", "type": "quantitative", "format": ","},
            {"field": "MenAthletes", "type": "quantitative", "format": ","},
            {"field": "WomenAthletes", "type": "quantitative", "format": ","},
            {"field": "Gold", "type": "quantitative", "format": ","},
            {"field": "Silver", "type": "quantitative", "format": ","},
            {"field": "Bronze", "type": "quantitative", "format": ","},
            {
              "field": "TotalMedals",
              "type": "quantitative",
              "format": ".2f"
            }
          ]
        }
      }
    ]
  }